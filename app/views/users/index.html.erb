<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>

<% @users.each do |user| %>
  <%= user.name %>
  <% if user.id != current_user.id %>
    <% if @friend_ids.include?(user.id) %>
      - Friend! ✅
    <% elsif @requests_sent_ids.include?(user.id) %>
      - Friend Request Sent 🤞
    <% elsif @requests_received_ids.include?(user.id) %>
      - Friend Request Received 🙋🏻‍♂️
    <% elsif !@friend_ids.include?(user.id) %>
      <%= link_to 'Send Friend Request', friendships_create_path(receiver_id: user.id) %>
    <% end %>
  <% end %>
  <br/>
<% end %>