<div class="post card col-6 offset-3 mb-3">
  <div class="card-body">
    <strong><%= post.author.name %></strong>
    <p class="card-text bg-secondary text-light rounded p-2">
      <%= post.body %>
    </p>
    <div class="d-flex justify-content-between align-items-center">
      <%= render 'stats', post: post %>
      <small class="text-muted"><%= time_ago_in_words(post.created_at) %></small>
    </div>
  </div>
</div>