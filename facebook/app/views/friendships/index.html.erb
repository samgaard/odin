<h1>Friendships</h1>


<h2>Pending Friend Requests</h2>
<% if @requests_received.length > 0 %>
  <h3>Received From 🙋🏻‍♂️</h3>
  <% @requests_received.each do |r| %>
    <%= r.sender.name %> - received <%= r.created_at %>
    <%= button_to 'Approve Request!', friendships_update_path(id: r.id), class: 'btn btn-outline-success' %> <br/>
  <% end %>
  <hr/>
<% end %>


<% if @requests_sent.length > 0 %>
  <h3>Sent To 📬</h3>
  <% @requests_sent.each do |r| %>
    <%= r.receiver.name %> - sent <%= r.created_at %> <br/>
  <% end %>
  <hr/>
<% end %>


<% if @friends.length > 0 %>
  <h2>Friends 👩‍❤️‍👨</h2>
  <% @friends.each do |r| %>
    <%= r.name %> <br/>
  <% end %>
<% end %>